{
  "name": "spfxresources",
  "displayName": "SPFx Resources",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "workspaceContains:**/loc/*",
    "onLanguage:typescript"
  ],
  "contributes": {
    "configuration": {
      "title": "SPFx Resources",
      "properties": {
        "spfxresources.translationService": {
          "type": "string",
          "order": 0,
          "enum": [
            "Azure",
            "OpenAI"
          ],
          "default": "Azure",
          "description": "Choose your translation service"
        },
        "spfxresources.azure-endpoint": {
          "type": "string",
          "order": 1,
          "default": "https://api.cognitive.microsofttranslator.com/",
          "description": "Azure Translation Service Endpoint"
        },
        "spfxresources.azure-subscriptionKey": {
          "type": "string",
          "order": 2,
          "default": "",
          "description": "Azure Translation Service Subscription Key"
        },
        "spfxresources.openai-key": {
          "type": "string",
          "order": 3,
          "default": "",
          "description": "The API key for OpenAI."
        },
        "spfxresources.openai-endpoint": {
          "type": "string",
          "order": 4,
          "default": "https://api.openai.com/v1",
          "description": "The endpoint for OpenAI."
        },
        "spfxresources.openai-model": {
          "type": "string",
          "order": 5,
          "enum": [
            "gpt-3.5-turbo",
            "gpt-4"
          ],
          "default": "gpt-3.5-turbo",
          "description": "The open ai model to use for translations."
        }
      }
    },
    "commands": [
      {
        "command": "spfx-resources.refresh",
        "title": "Refresh",
        "icon": "assets/refresh.svg"
      },
      {
        "command": "spfx-resources.edit-resource",
        "title": "Edit",
        "icon": "assets/edit.svg"
      },
      {
        "command": "spfx-resources.create-resource",
        "title": "Create"
      },
      {
        "command": "spfx-resources.delete-resource",
        "title": "Delete",
        "icon": "assets/bin.svg"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "spfx-resources.refresh",
          "when": "view == spfx-resource-projects",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "spfx-resources.delete-resource",
          "when": "view == spfx-resource-projects && viewItem == NamedResource",
          "group": "inline",
          "order": 2
        },
        {
          "command": "spfx-resources.edit-resource",
          "when": "view == spfx-resource-projects && viewItem == NamedResource",
          "group": "inline",
          "order": 1
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "spfx-resources",
          "title": "SPFx Resources",
          "icon": "assets/activitybar.svg"
        }
      ]
    },
    "views": {
      "spfx-resources": [
        {
          "id": "spfx-resource-projects",
          "name": "Projects"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "20.10.4",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "glob": "^10.3.10",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "arktype": "^1.0.28-alpha",
    "ignore": "^5.3.0",
    "openai": "^4.24.1",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  }
}
